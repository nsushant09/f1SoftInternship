<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MaterialDesignLearn" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="background">@color/secondary_white</item>
        <item name="colorSurface">@color/surface_color_light</item>
        <item name="colorError">@color/light_red</item>

        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnError">@color/grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>

        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>

        <item name="textAppearanceHeadline1">@style/typographyHeadline1</item>
        <item name="textAppearanceHeadline2">@style/typographyHeadline2</item>
        <item name="textAppearanceHeadline3">@style/typographyHeadline3</item>
        <item name="textAppearanceHeadline4">@style/typographyHeadline4</item>
        <item name="textAppearanceHeadline5">@style/typographyHeadline5</item>
        <item name="textAppearanceHeadline6">@style/typographyHeadline6</item>

        <item name="textAppearanceSubtitle1">@style/typographySubtitle1</item>
        <item name="textAppearanceSubtitle2">@style/typographySubtitle2</item>

        <item name="textAppearanceBody1">@style/typographyBody1</item>
        <item name="textAppearanceBody2">@style/typographyBody2</item>

        <item name="textAppearanceCaption">@style/typographyCaption</item>
        <item name="textAppearanceOverline">@style/typographyOverline</item>
        <item name="textAppearanceButton">@style/typographyButton</item>

        <item name="paragraphTextColor">@color/neon_orange</item>
        <item name="paragraphText">@style/Theme.MaterialDesignLearn.ParagraphText</item>
        <item name="dateText">@style/Theme.MaterialDesignLearn.DateText</item>
        <item name="booleanAttributeTest">true</item>
        <item name="stringAttributeTest">@string/test_string</item>
        <item name="paragraphTextPaddingAttr">@dimen/paragraphTextPadding</item>
        <item name="integerAttributeTest">2</item>

    </style>

    <style name="Theme.MaterialDesignLearn.ParagraphText">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Theme.MaterialDesignLearn.DateText">
        <item name="android:textSize">24sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="BottomSheetStyle" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
    </style>



<!--    <style name=""-->
    
    <style name="MaterialDialogs" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Neutral</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Negative</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/light_blue</item>
        <item name="rippleColor">@color/blue</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Alert.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/blue</item>
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/secondary_white</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RoundShapeTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="shapeAppearanceMediumComponent">@style/RoundShapeAppearance</item>
    </style>

    <style name="RoundShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>