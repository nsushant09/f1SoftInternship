<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--    Typography styles -->

    <style name="typographyBody1">
        <item name="font">@font/sourcesans_regular</item>
        <item name="fontFamily">@font/sourcesans_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.2</item>
    </style>

    <style name="typographyBody2">
        <item name="font">@font/sourcesans_regular</item>
        <item name="fontFamily">@font/sourcesans_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.25</item>
    </style>

    <style name="typographyButton">
        <item name="font">@font/sourcesans_medium</item>
        <item name="fontFamily">@font/sourcesans_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:letterSpacing">0.5</item>
    </style>

    <style name="typographyCaption">
        <item name="font">@font/sourcesans_regular</item>
        <item name="fontFamily">@font/sourcesans_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="typographyHeadline1">
        <item name="font">@font/sourcesans_light</item>
        <item name="fontFamily">@font/sourcesans_light</item>
        <item name="android:textSize">96sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="typographyHeadline2">
        <item name="font">@font/sourcesans_light</item>
        <item name="fontFamily">@font/sourcesans_light</item>
        <item name="android:textSize">60sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="typographyHeadline3">
        <item name="font">@font/sourcesans_regular</item>
        <item name="fontFamily">@font/sourcesans_regular</item>
        <item name="android:textSize">48sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="typographyHeadline4">
        <item name="font">@font/sourcesans_regular</item>
        <item name="fontFamily">@font/sourcesans_regular</item>
        <item name="android:textSize">34sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="typographyHeadline5">
        <item name="font">@font/sourcesans_regular</item>
        <item name="fontFamily">@font/sourcesans_medium</item>
        <item name="android:textSize">24sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="typographyHeadline6">
        <item name="font">@font/sourcesans_medium</item>
        <item name="fontFamily">@font/sourcesans_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.15</item>
    </style>

    <style name="typographyOverline">
        <item name="font">@font/sourcesans_regular</item>
        <item name="fontFamily">@font/sourcesans_regular</item>
        <item name="android:textSize">10sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:letterSpacing">1.5</item>
    </style>

    <style name="typographySubtitle1">
        <item name="font">@font/sourcesans_regular</item>
        <item name="fontFamily">@font/sourcesans_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.15</item>
    </style>

    <style name="typographySubtitle2">
        <item name="font">@font/sourcesans_medium</item>
        <item name="fontFamily">@font/sourcesans_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.1</item>
    </style>


<!--    header styles-->

    <style name="Theme.App.HeaderMiniCards" parent="Widget.MaterialComponents.CardView">
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorSurface">?attr/colorSurface</item>
        <item name="colorOnSurface">?attr/colorOnSurface</item>
        <item name="cardBackgroundColor">@color/transparent_black</item>
        <item name="cardCornerRadius">32dp</item>
        <item name="cardElevation">0dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

<!--    This is not used currently-->
    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>


    <style name="HeaderMiniCardsImage">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">@drawable/headerbox_minicards_background</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:tint">@color/secondary_white</item>
    </style>

    <style name="HeaderHeadlineStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline4</item>
    </style>

    <style name="HeaderDollarSignStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
    </style>

    <style name="home_recentTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="fontFamily">@font/sourcesans_medium</item>
    </style>

    <style name="home_showallTextStyle" parent="Widget.MaterialComponents.Button.TextButton">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle2</item>
        <item name="android:textColor">?attr/colorPrimary</item>

        <item name="icon">@drawable/ic_sharp_arrow_forward_ios_24</item>
        <item name="iconSize">16dp</item>
        <item name="iconGravity">end</item>

    </style>

    <style name="RecyclerViewHeaderTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>


    <style name="RecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:layout_margin">6dp</item>
    </style>

    <style name="ViewStyles">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@color/grey</item>
    </style>

    <style name="BottomSheetLinkImageStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:src">@drawable/ic_baseline_link_24</item>
        <item name="android:tint">@color/grey</item>
    </style>

    <style name="BottomSheetCardOutlinedStyle" parent="Widget.Material3.CardView.Outlined">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="strokeColor">@color/grey</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>

    </style>

    <style name="MessageSupportButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="itemPaddingBottom">8dp</item>
        <item name="icon">@drawable/ic_baseline_message_24</item>
        <item name="android:text">@string/message_support</item>
        <item name="android:textAppearance">@style/typographyBody1</item>
        <item name="iconGravity">textStart</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="cornerRadius">50dp</item>
    </style>



    <style name="RoundedBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundedBottomSheetDialog</item>
    </style>

</resources>