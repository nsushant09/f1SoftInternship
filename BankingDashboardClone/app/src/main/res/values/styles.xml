<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--    Typography styles -->

    <style name="typographyBody1">
        <item name="font">@font/sourcesans_regular</item>
        <item name="fontFamily">@font/sourcesans_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.2</item>
    </style>

    <style name="typographyBody2">
        <item name="font">@font/sourcesans_regular</item>
        <item name="fontFamily">@font/sourcesans_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.25</item>
    </style>

    <style name="typographyButton">
        <item name="font">@font/sourcesans_medium</item>
        <item name="fontFamily">@font/sourcesans_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:letterSpacing">0.5</item>
    </style>

    <style name="typographyCaption">
        <item name="font">@font/sourcesans_regular</item>
        <item name="fontFamily">@font/sourcesans_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="typographyHeadline1">
        <item name="font">@font/sourcesans_light</item>
        <item name="fontFamily">@font/sourcesans_light</item>
        <item name="android:textSize">96sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="typographyHeadline2">
        <item name="font">@font/sourcesans_light</item>
        <item name="fontFamily">@font/sourcesans_light</item>
        <item name="android:textSize">60sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="typographyHeadline3">
        <item name="font">@font/sourcesans_regular</item>
        <item name="fontFamily">@font/sourcesans_regular</item>
        <item name="android:textSize">48sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="typographyHeadline4">
        <item name="font">@font/sourcesans_regular</item>
        <item name="fontFamily">@font/sourcesans_regular</item>
        <item name="android:textSize">34sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="typographyHeadline5">
        <item name="font">@font/sourcesans_regular</item>
        <item name="fontFamily">@font/sourcesans_medium</item>
        <item name="android:textSize">24sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="typographyHeadline6">
        <item name="font">@font/sourcesans_medium</item>
        <item name="fontFamily">@font/sourcesans_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.15</item>
    </style>

    <style name="typographyOverline">
        <item name="font">@font/sourcesans_regular</item>
        <item name="fontFamily">@font/sourcesans_regular</item>
        <item name="android:textSize">10sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:letterSpacing">1.5</item>
    </style>

    <style name="typographySubtitle1">
        <item name="font">@font/sourcesans_regular</item>
        <item name="fontFamily">@font/sourcesans_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.15</item>
    </style>

    <style name="typographySubtitle2">
        <item name="font">@font/sourcesans_medium</item>
        <item name="fontFamily">@font/sourcesans_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.1</item>
    </style>


<!--    header styles-->

    <style name="Theme.App.HeaderMiniCards" parent="Widget.MaterialComponents.CardView">
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorSurface">?attr/colorSurface</item>
        <item name="colorOnSurface">?attr/colorOnSurface</item>
        <item name="cardBackgroundColor">@color/transparent_black</item>
        <item name="cardCornerRadius">32dp</item>
        <item name="cardElevation">0dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

<!--    This is not used currently-->
    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>


    <style name="HeaderMiniCardsImage">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">@drawable/headerbox_minicards_background</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:tint">@color/secondary_white</item>
    </style>

    <style name="HeaderHeadlineStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline4</item>
    </style>

    <style name="HeaderDollarSignStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
    </style>

    <style name="home_recentTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="fontFamily">@font/sourcesans_medium</item>
    </style>

    <style name="home_showallTextStyle" parent="Widget.MaterialComponents.Button.TextButton">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle2</item>
        <item name="android:textColor">?attr/colorPrimary</item>

        <item name="icon">@drawable/ic_sharp_arrow_forward_ios_24</item>
        <item name="iconSize">16dp</item>
        <item name="iconGravity">end</item>

    </style>

    <style name="RecyclerViewHeaderTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

</resources>